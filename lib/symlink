#!/usr/bin/env zsh
# dotfiles/git/@install

###################################################################################################
# Setup

PROG=${(%):-%N}
DIR=$(cd $(dirname ${PROG}) && pwd)
DOTFILES=$(cd ${DIR} && cd .. && pwd)

###################################################################################################
# Main

DEST=$1
LINK=$2

if [[ -h ${LINK} ]]; then
	CURR=$(readlink ${LINK})
	if [[ "${DEST}" != "${CURR}" ]]; then
		rm ${LINK}
	fi
fi

if [[ ! -e ${LINK} ]] && [[ ! -h ${LINK} ]]; then
	ln -s ${DEST} ${LINK}
fi